# Server Configuration
PORT=5000
NODE_ENV=production
CORS_ORIGIN=https://your-production-domain.com

# Database Configuration (Supabase/Postgres)
DB_DIALECT=postgres
DB_HOST=your-db-host.supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your-secure-password
DB_SSL=true
DB_SSL_REJECT_UNAUTHORIZED=true

# Redis Configuration
REDIS_URL=rediss://:your-redis-password@your-redis-host:6379

# Security
JWT_SECRET=your-very-long-and-secure-random-secret-key
BCRYPT_ROUNDS=12

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@o0.ingest.sentry.io/0

# Logging
LOG_LEVEL=info
