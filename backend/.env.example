# Backend Environment Variables Example
# Copy this file to .env and fill in your actual values

# Environment
NODE_ENV=production

# Server Configuration
PORT=5000

# JWT Secret (REQUIRED in production - minimum 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-strong-random-secret-minimum-32-characters-change-this

# ============================================================================
# DATABASE CONFIGURATION - Choose ONE of the following methods:
# ============================================================================

# METHOD 1: DATABASE_URL (Recommended for Vercel/Heroku/Cloud deployments)
# This is automatically provided by Supabase integration in Vercel
# Priority: If DATABASE_URL is set, it takes precedence over individual variables
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# DATABASE_URL=postgresql://postgres.yqzwfbufcmxzeqfbdlpf:PASSWORD@aws-1-ap-northeast-2.pooler.supabase.com:5432/postgres

# METHOD 2: Individual Database Variables (Fallback for local development)
# These are used if DATABASE_URL is not set
DB_DIALECT=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=shopify_admin
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_SSL=true
DB_SSL_REJECT_UNAUTHORIZED=false

# Database Connection Pool (Optional - defaults shown)
# For serverless (Vercel): max=3, min=0
# For traditional servers: max=20, min=5
DB_POOL_MAX=10
DB_POOL_MIN=2
DB_POOL_IDLE=10000
DB_POOL_ACQUIRE=30000
DB_POOL_EVICT=1000

# CORS Configuration (REQUIRED in production)
# Comma-separated list of allowed origins
CORS_ORIGIN=https://admin.yourdomain.com,https://www.yourdomain.com

# Sentry Error Tracking (Optional but recommended)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Logging Level (Optional - defaults to 'info' in production)
LOG_LEVEL=info

