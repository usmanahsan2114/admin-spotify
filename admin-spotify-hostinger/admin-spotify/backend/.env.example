# Backend Environment Variables Example
# Copy this file to .env and fill in your actual values

# Environment
NODE_ENV=production

# Server Configuration
PORT=5000

# JWT Secret (REQUIRED in production - minimum 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-strong-random-secret-minimum-32-characters-change-this

# Database Configuration (REQUIRED in production)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=shopify_admin
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# Database Connection Pool (Optional - defaults shown)
DB_POOL_MAX=10
DB_POOL_MIN=2
DB_POOL_IDLE=10000
DB_POOL_ACQUIRE=30000
DB_POOL_EVICT=1000

# CORS Configuration (REQUIRED in production)
# Comma-separated list of allowed origins
CORS_ORIGIN=https://admin.yourdomain.com,https://www.yourdomain.com

# Sentry Error Tracking (Optional but recommended)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Logging Level (Optional - defaults to 'info' in production)
LOG_LEVEL=info
